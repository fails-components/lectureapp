{
  "parser": "@babel/eslint-parser",
  "extends": [
    "standard",
    "react-app",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "ignorePatterns": ["*/src/libav.js/*.*.js"],
  "env": {
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16"
    }
  },
  "rules": {
    "space-before-function-paren": 0,
    "import/export": 0,
    "promise/catch-or-return": "error"
  }
}
